@using WebPlanner.Domain.Auxiliary_Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model UserManagerModel
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/_Layout.cshtml";
}
<!doctype html>
<html>
    <head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<link href="@Url.Content("~/css/LogRegForm.css")" rel="stylesheet" type="text/css"/>	
		<link href="@Url.Content("~/css/Background.css")" rel="stylesheet" type="text/css"/>
    </head>
    <body>
		<div class='light x1'></div>
		<div class='light x2'></div>
		<div class='light x3'></div>
		<div class='light x4'></div>
		<div class='light x5'></div>
		<div class='light x6'></div>
		<div class='light x7'></div>
		<div class='light x8'></div>
		<div class='light x9'></div>
		<div class="container" id="container">
	<div class="form-container sign-up-container">
		<form asp-action="Register">
			<h1>Create Account</h1>
			<span>or use your email for registration</span>
			<input type="text" placeholder="Name" asp-for="RegName" />
			<input type="email" placeholder="Email" asp-for="RegEmail" />
			<input type="password" placeholder="Password" asp-for="RegPassword" />
			<button>Sign Up</button>
		</form>
	</div>
	<div class="form-container sign-in-container">
		<form asp-action="Login">
			<h1>Sign in</h1>
			<span>or use your account</span>
			<input type="email" placeholder="Email" asp-for="LoginEmail" />
			<input type="password" placeholder="Password" asp-for="LoginPassword" />
			<a href="#">Forgot your password?</a>
			<button type="submit">Sign In</button>
		</form>
	</div>
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>Welcome Back!</h1>
				<p>To keep connected with us please login with your personal info</p>
				<button class="ghost" id="signIn">Sign In</button>
			</div>
			<div class="overlay-panel overlay-right">
				<h1>Hello, Friend!</h1>
				<p>Enter your personal details and start journey with us</p>
				<button class="ghost" id="signUp">Sign Up</button>
			</div>
		</div>
	</div>
</div>		      
    </body>
	<script>
		const signUpButton = document.getElementById('signUp');
		const signInButton = document.getElementById('signIn');
		const container = document.getElementById('container');
		signUpButton.addEventListener('click', () => {
		container.classList.add("right-panel-active");
		});
		signInButton.addEventListener('click', () => {
		container.classList.remove("right-panel-active");
		});
	</script>
</html>
